{
  "name": "scp-action",
  "main": "lib/index.js",
  "version": "0.1.8",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "package": "npm run build && ncc build",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "testTimeout": 15000
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "glob": "^8.1.0",
    "ssh2": "^1.11.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.5",
    "@types/ssh2": "^1.11.7",
    "@vercel/ncc": "^0.36.0",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
