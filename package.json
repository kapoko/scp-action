{
  "name": "scp-action",
  "main": "lib/index.js",
  "version": "0.2.0",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "package": "npm run build && ncc build",
    "test": "jest",
    "prepare": "husky"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "testTimeout": 15000
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "glob": "^13.0.0",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/ssh2": "^1.15.5",
    "@vercel/ncc": "^0.38.4",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
