{
  "name": "scp-action",
  "main": "lib/index.js",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "package": "npm run build && ncc build",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "glob": "^8.0.3",
    "ssh2": "^1.11.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.6",
    "@types/ssh2": "^1.11.4",
    "@vercel/ncc": "^0.34.0",
    "dotenv": "^16.0.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
