{
  "name": "scp-action",
  "main": "lib/index.js",
  "version": "0.1.9",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "package": "npm run build && ncc build",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "testTimeout": 15000
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "glob": "^10.3.3",
    "ssh2": "^1.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/ssh2": "^1.11.13",
    "@vercel/ncc": "^0.36.1",
    "dotenv": "^16.3.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
