{
  "name": "scp-action",
  "main": "lib/index.js",
  "version": "0.1.10",
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "package": "npm run build && ncc build",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "testTimeout": 15000
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "glob": "^10.3.12",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/ssh2": "^1.15.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
